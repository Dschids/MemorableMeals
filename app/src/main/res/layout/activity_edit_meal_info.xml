<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMealInfo">

    <EditText
        android:id="@+id/edtTxtEdtDecimalMealCost"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/mealCostHint"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:text="@string/afMealCost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbEdtRating" />

    <TextView
        android:id="@+id/txtEditMealInfo"
        android:layout_width="245dp"
        android:layout_height="89dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/editMeal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rbEdtRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtEdtRestaurant" />

    <EditText
        android:id="@+id/edtTxtEdtMealName"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/mealHint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditMealInfo" />

    <EditText
        android:id="@+id/edtTxtEdtComments"
        android:layout_width="243dp"
        android:layout_height="104dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center_horizontal|top"
        android:hint="@string/mealCommentsHint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtEdtDecimalMealCost" />

    <EditText
        android:id="@+id/edtTxtEdtRestaurant"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="@string/restaurantHint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtEdtMealName" />

    <Button
        android:id="@+id/btnEdtSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@+id/btnEdtDelete"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtEdtComments" />

    <Button
        android:id="@+id/btnEdtDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="56dp"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtEdtComments" />

</androidx.constraintlayout.widget.ConstraintLayout>